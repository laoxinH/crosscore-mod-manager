{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "groupName": "minor dependencies"
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "patch dependencies"
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "major dependencies"
    }
  ]
}
